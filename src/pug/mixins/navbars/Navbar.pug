mixin Navbar
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3.backdrop.d-block(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='index.html')
          img(src=`${CWD}assets/img/icons/Logo.png` height="35"  alt='logo')

      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0.font-base.align-items-center
          li.nav-item.px-2
            a.nav-link(href='#service') Product
          li.nav-item.px-2
            a.nav-link(href='#feature') Customers
          li.nav-item.px-2
            a.nav-link(href='#section') Pricing
          li.nav-item.px-2
            a.nav-link(href='#autopilot') Docs  
          form.d-flex.py-2.py-lg-0
            button.btn.btn-primary(type='submit') Sign Up
          

